---
import "../styles/global.scss";
import Layout from "../layouts/Wrapper.astro";
import BlogEntry from "../components/BlogEntry.astro";
const allEntries = await Astro.glob("../pages/entry/*.md");
const pageTitle: string = "Blog Page - Yoshihito";
---

<Layout pageTitle={pageTitle}>
  <h1 class="main__title">/Blog_Page</h1>
  <ul class="main__entry-list">
    {
      allEntries.map((entry) => (
        <BlogEntry
          title={entry.frontmatter.title}
          url={entry.url}
          pubDate={entry.frontmatter.pubDate.toString().slice(0, 10)}
          description={entry.frontmatter.description}
        />
      ))
    }
  </ul>
</Layout>

<style lang="scss">
  @use "sass:map";
  @use "../styles/variables" as *;
  @use "../styles/mixin" as *;

  .main {
    &__title {
      @include monospace-font();
      margin-bottom: map.get($font-sizes, "display");
      text-align: center;
    }
  }
</style>
